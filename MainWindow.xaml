                <MenuItem x:Name="MenuGreen" Header="Зеленый" Click="MenuGreen_Click"/>
                <MenuItem x:Name="MenuBlue" Header="Синий" Click="MenuBlue_Click"/>
                <MenuItem x:Name="MenuViolet" Header="Фиолетовый" Click="MenuViolet_Click"/>
                <MenuItem x:Name="MenuOrange" Header="Оранжевый" Click="MenuOrange_Click"/>
                <MenuItem x:Name="MenuWhite" Header="Белый" Click="MenuWhite_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuRazr" Header="О разработчике" Click="MenuRazr_Click">
            </MenuItem>
            <MenuItem x:Name="MenuClose" Header="Закрыть" Click="MenuClose_Click">
            </MenuItem>
        </Menu>
    </Grid>
</Window>
